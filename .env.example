# Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Timezone for spotlight automation (Optional)
# Examples: UTC, America/New_York, Europe/London, Asia/Tokyo
TZ=UTC

# Environment mode (Optional)
# Set to 'production' for live deployment
NODE_ENV=development

# Dry run mode (Optional)
# Set to 'true' to test setup without making actual changes
DRY_RUN=false

# Maximum setup retry attempts (Optional)
# Number of times to retry failed setup operations
MAX_SETUP_RETRIES=3

# Spotlight automation control (Optional)
# Set to 'false' to disable weekly spotlight automation
SPOTLIGHT_ENABLED=true

# Logging level (Optional)
# Options: error, warn, info, debug
LOG_LEVEL=info

# Health check port (Optional)
# Port for HTTP health check endpoint
PORT=3000
